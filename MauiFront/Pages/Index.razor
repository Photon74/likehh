@page "/"

<PageTitle>Index</PageTitle>

<h1>Hello, world!</h1>

Welcome to your new app.


<SurveyPrompt 
    Title="How is Blazor working for you?" 
    LinkClickCallback="ClickCallback"
    ComponentClickCallback="ComponentClicked">
</SurveyPrompt>

<p>@message</p>
<p>@coords</p>

@code{
    private string? message;
    private string? coords;

    private void ClickCallback()
    {
        message = "Пользователь нажал на ссылку";
    }

    private void ComponentClicked(MouseEventArgs args)
    {
        coords = $"X = {args.ClientX} Y = {args.ClientY}";
    }
}